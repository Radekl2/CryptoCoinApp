<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical"
    tools:context="com.example.radek.finalproduct.ShowDetailsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#dddddd">

        <ImageView
            android:id="@+id/logoDetails"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/addition" />

        <TextView
            android:id="@+id/pelnaNazwa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/logoDetails"
            android:layout_toRightOf="@+id/logoDetails"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:background="#555555"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/usdPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="25dp"
        android:background="#444444"
        android:padding="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/usdChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="25dp"
        android:background="#444444"
        android:padding="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/lastVisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="25dp"
        android:background="#444444"
        android:padding="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18dp" />



</LinearLayout>
